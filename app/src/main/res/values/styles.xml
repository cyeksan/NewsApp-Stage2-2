<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="newsTitle">
        <item name="android:textSize">@dimen/titleSize</item>
        <item name="android:paddingRight">@dimen/standardPadding</item>
        <item name="android:paddingLeft">@dimen/standardPadding</item>
        <item name="android:paddingTop">@dimen/halfPadding</item>
        <item name="android:paddingBottom">@dimen/halfPadding</item>
        <item name="android:textColor">@color/newsColor</item>
    </style>

    <style name="newsDate">

        <item name="android:textSize">@dimen/dateSize</item>
        <item name="android:paddingRight">@dimen/standardPadding</item>
        <item name="android:paddingLeft">@dimen/standardPadding</item>
        <item name="android:paddingBottom">@dimen/standardPadding</item>
    </style>

    <style name="newsAuthor">

        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/authorSize</item>
        <item name="android:paddingRight">@dimen/standardPadding</item>
        <item name="android:paddingLeft">@dimen/standardPadding</item>
        <item name="android:paddingBottom">@dimen/standardPadding</item>
    </style>

    <style name="newsSection">
        <item name="android:textSize">@dimen/sectionSize</item>
        <item name="android:layout_marginRight">@dimen/standardPadding</item>
        <item name="android:layout_marginLeft">@dimen/standardPadding</item>
        <item name="android:layout_marginBottom">@dimen/halfPadding</item>
        <item name="android:paddingRight">@dimen/standardPadding</item>
        <item name="android:paddingLeft">@dimen/standardPadding</item>
        <item name="android:paddingTop">@dimen/halfPadding</item>
        <item name="android:paddingBottom">@dimen/halfPadding</item>
        <item name="android:textColor">@color/sectionColor</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
